Checks: >
  -readability-identifier-naming

CheckOptions:
  # 类名 PascalCase
  - { key: readability-identifier-naming.ClassCase,             value: PascalCase }
  - { key: readability-identifier-naming.StructCase,            value: PascalCase }

  # 方法 PascalCase
  - { key: readability-identifier-naming.MethodCase,            value: PascalCase }

  # 成员变量 m_camelCase
  - { key: readability-identifier-naming.MemberCase,            value: camelBack }
  - { key: readability-identifier-naming.MemberPrefix,          value: m_ }

  # 静态成员 s_camelCase
  - { key: readability-identifier-naming.StaticMemberCase,      value: camelBack }
  - { key: readability-identifier-naming.StaticMemberPrefix,    value: s_ }

  # 全局变量 g_camelCase
  - { key: readability-identifier-naming.GlobalVariableCase,    value: camelBack }
  - { key: readability-identifier-naming.GlobalVariablePrefix,  value: g_ }

  # 常量 UPPER_CASE
  - { key: readability-identifier-naming.ConstantCase,          value: UPPER_CASE }

  # 枚举值 PascalCase
  - { key: readability-identifier-naming.EnumConstantCase,      value: PascalCase }
